extends ../layout

block content 
    h1 create your playlist
    - var total=0
    table(class="table") 
        thead 
            tr  
                th song name
                th song price
                th singer
                th more details
        each item in cart
            - total += Number(item.price)
            tbody
                tr
                    td=item.name        
                    td=item.price
                    td=item.singer
                    td=item.detail
                    td
                        a(href="cart/remove/"+item._id ,class="btn btn-danger") Remove
        tfoot
            tr
                th Total        
                th=total          